pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:0.12.18
    command:
    - sleep
    tty: true
"""
    }
  }
  stages {
    stage('Clone repository') {
      container('terraform') {
        checkout scm
      }
    }
    stage('Terraform init') {
      container('terraform') {
        sh 'terraform init'
      }
    }
  }
}