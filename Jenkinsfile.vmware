pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:0.12.18
    command:
    - sleep
    args:
    - 99d
    tty: true
"""
    }
  }
  stages {
    stage('Terraform init') {
      steps {
        checkout scm
        container('terraform') {
          sh 'pwd'
          sh 'ls -l'
          sh 'cd vmware'
          sh 'ls -l'
          sh 'terraform init'
        }
      }
    }
  }
}