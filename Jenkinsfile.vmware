podTemplate(yaml: '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:0.12.18
    command:
    - sleep
    args:
    - 99d
''') {
    node(POD_LABEL) {
        git 'https://github.com/ciscops/colabot.git'
        container('docker') {
            stage('Clone repository') {
                checkout scm
            }
            stage('Build image') {
                sh 'terraform --version'
            }
        }
    }
}