pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:0.12.18
    command:
    - sleep
    tty: true
"""
    }
  }
  stages {
    stage('Clone repository') {
      steps {
        container('terraform') {
          checkout scm
        }
      }
    }
    stage('Terraform init') {
      steps {
        container('terraform') {
          sh 'terraform init'
        }
      }
    }
  }
}